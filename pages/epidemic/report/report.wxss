/* pages/epidemic/report/report.wxss */
page{
  background: #F8F8F8;
}
.reportCont{
  background: #fff;
  margin-top: 20rpx;
}
.column{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx ;
  box-sizing: border-box;
  border-bottom: solid 1rpx #F7F7F7;
  font-size: 30rpx;
  color: #424242;
}
.addressInput,picker{
  text-align: left;
  width: 85%;
}
picker{
  width: 76%;
}
.columnO{
  font-size: 30rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  color: #424242;
}
.arrow{
  width: 14rpx;
  height: 24rpx;
}
.intro{
  margin-top: 20rpx;
  width: 100%;
  height: 300rpx;
  border: solid 1rpx #ccc;
  border-radius: 10px;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #424242;
  line-height: 42rpx;
  position: relative;
}
.currentWordNumber{
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 26rpx;
  color: #999;
}
.submitBtn{
  width: 600rpx !important;
  height: 70rpx !important;
  background: #50DABE;
  border-radius: 35rpx;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  font-size: 28rpx;
  padding: 0;
  margin-top: 100rpx;
}
radio{
  margin-left: 30rpx;
  padding-bottom: 30rpx;
  transform: scale(0.8)
}
text{
  font-size: 28rpx;
  color: #666;
}