/* pages/houseDetails/houseDetails.wxss */
page{
  background: #F8F8F8;
  padding-bottom: 50rpx;
}
.column{
  margin-top: 30rpx;
  background: #fff;
}
.title{
  font-size: 32rpx;
  color: #424242;
  line-height: 32rpx;
  padding: 40rpx 0 20rpx 30rpx;
  position: relative;
}
.status{
  color: #50DABE;
}
.yellow{
  color: #EAC100;
}
.red{
  color: red;
}
.addMember{
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%) ;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #fff;
  background: #50DABE;
  padding: 0 20rpx;
  border-radius: 22rpx;
}
.item,.columnMe{
  border-bottom: solid 1rpx #F8F8F8;
  padding: 0 0 0 30rpx;
  box-sizing: border-box;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  color: #424242;
}
.itemTitle{
  color: #8F9199;
  width: 160rpx;
}
.itemTitle,.itemText{
  display: inline-block;
  /* margin-right: 30rpx; */
}
.tabCont{
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: solid #F8F8F8 1rpx;
}
.tabs{
  text-align: center;
  display: inline-block;
  width: 25%;
  color: #424242;
  font-size: 28rpx;
}
.active{
  position: relative;
}
.active::after{
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 70rpx;
  height: 6rpx;
  background: #50DABE;
  border-radius: 3rpx;
}
.columnMe{
  display: flex;
  justify-content: space-between;
}
.noData{
  padding: 100rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}
.shenheStatus{
  margin-top: 40rpx;
  /* display: flex;
  justify-content: flex-end; */
  margin: 40rpx 30rpx 50rpx 0;
  overflow: hidden;
}
.delBtn{
  width: 220rpx;
  height: 68rpx;
  background: #50DABE;
  border-radius: 34rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #FFFFFF;
  text-align: center;
  line-height: 68rpx;
  float: right;
}
.delText{
  font-size: 26rpx;
  color: #D5D5D5;
  float: right;
  line-height: 68rpx;
  margin-right: 20rpx;
}
.columnMe{
  display: flex;
  align-content: center;
  flex-direction: row;
  justify-content: space-between;
  padding-right: 30rpx;
  position: relative;
}
.shareBtn{
  font-size: 26rpx;
  color: #50DABE;
  padding:20rpx 25rpx !important;
  background: transparent;
  font-weight: normal;
  width: auto !important;
  height: 66rpx !important;
  line-height: 26rpx !important;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.green{
  color:#50DABE ;
}
.default{
  color: #424242;
}
.yellow{
  color: #EAC100;
}
.shareBtnO{
  background: transparent;
  border: none;
  padding: 0;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}
.btnType{
  position: relative;
}