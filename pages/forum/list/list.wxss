/* pages/forum/list/list.wxss */
page{
background: #F7F7F7;
}
.listTab{
  border-bottom: 1px solid #F3F3F3;
  height: 96rpx;
  background: #fff;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 99;
}
.listTabCont{
  display: flex;
  align-items: center;
  height: 96rpx;
  width: 60%;
  margin: 0 auto;
  font-size: 34rpx;
  color: #979797;
}
.classification{
  flex: 1;
  text-align: center;
  position: relative;
}
.up{
  display: inline-block;
  width:0;
  height:0;
	border-right:10rpx solid transparent;
	border-left:10rpx solid transparent;
  border-top:10rpx solid #747474;
  margin-left: 10rpx;
}
.down{
  display: inline-block;
  width:0;
  height:0;
	border-right:10rpx solid transparent;
	border-left:10rpx solid transparent;
  border-bottom:10rpx solid #747474;
  margin-left: 10rpx;
}
.active{
  position: relative;
}
.active::after{
  content: '';
  display: block;
  position: absolute;
  bottom: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 50rpx;
  height: 6rpx;
  background: #50DABE;
  border-radius: 3rpx;
}
.groupCont{
  position: fixed;
  top: 89rpx;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 4;
  background: rgba(0,0,0,.26);
}
.groupItem{
  padding: 20rpx 0 20rpx 30rpx;
  background: #fff;
  overflow: hidden;
  min-height: 400rpx;
}
.item{
  min-width: 165rpx;
  height: 72rpx;
  background: #F2F2F2;
  border-radius: 4rpx;
  padding: 0 20rpx;
  float: left;
  box-sizing: border-box;
  line-height: 72rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  margin: 0 10rpx 20rpx 0;  
}
.listColumn{
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.userImg{
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
}
.userCol{
  display: flex;
  align-items: center;
}
.userCont{
  flex: 1;
  margin-left: 20rpx;
}
.userName{
  font-size: 28rpx;
  color: #6D6D6D;
  line-height: 30rpx;
}
.userTime{
  font-size: 24rpx;
  color: #C6C6C6;
  line-height: 30rpx;
}
.followList{
  width: 120rpx;
  height: 41rpx;
  border: 2rpx solid #50DABE;
  border-radius: 21rpx;
  font-size: 25rpx;
  color: #50DABE;
  display: flex;
  align-items: center;
  justify-content: center;
}
.follewIcon::before{
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 22rpx;
  transform: translate(-50%,-50%);
  border-top: 2rpx solid;
}
.follewIcon::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  height: 22rpx;
  transform: translate(-50%,-50%);
  border-left: 2rpx solid;
 }
 .follewIcon{
  width: 22rpx;
  height: 22rpx;
  position: relative;
  margin-right: 5rpx;
 }
 .follewedIcon{
  width: 10rpx;
  height: 20rpx;
  border-color: #D0D0D0;
  border-style: solid;
  border-width: 0 3rpx 3rpx 0;
  transform: rotate(45deg);
  margin-right: 10rpx;
 }
 .grey{
  color: #D0D0D0;
  border: 2rpx solid #D0D0D0;
 }
 .title{
  font-size: 30rpx;
  color: #535353;
  line-height: 30rpx;
  margin: 28rpx 0 13rpx;
  font-weight: bold;
 }
 .forumIntro{
  font-size: 28rpx;
  color: #565656;
  line-height: 42rpx;
  position: relative;
 }
 .forumIntro text{
   position: absolute;
   bottom: 0;
   right: 0;
   font-size: 28rpx;
   color: #50DABE;
 }
 .interactiveCol{
   overflow: hidden;
   margin-top: 15rpx;
 }
 .interactiveCol image,.replyZan image,.replyReport image{
   width: 32rpx;
   height: 32rpx;
   margin-right: 10rpx;
 }
 .interactiveCol text,.replyZan text,.replyReport text{
   font-size: 26rpx;
   color: #6D6D6D;
 }
 .interactiveCol .reply{
   float: left;
   display: flex;
   align-items: center;
   width: 28%;
 }
 .interactiveCol .reply:last-child{
   width: 100rpx;
 }
 .replyUser{
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
 }
 .replyCol{
   display: flex;
   justify-content: space-between;
   align-items: flex-start;
   margin-top: 20rpx;
 }
 .replyRight{
   width: 89%;
 }
 .replyName{
   font-size: 24rpx;
   color: #757575;
   line-height: 26rpx;
   margin-bottom: 10rpx;
 }
 .replyZan{
  flex: 1;
  text-align: right;
  margin-right: 35rpx;
 }
 .replyText{
   font-size: 26rpx;
   color: #373737;
   line-height: 39rpx;
 }
 .replyOther{
   display: flex;
   /* justify-content: space-between; */
   align-items: center;
 }
 .replyTime{
  font-size: 25rpx;
  color: #BBBBBB;
  line-height: 26rpx;
 }
 .imageCol{
   margin-top: 10rpx;
 }
 .imageCol image{
   width: 214rpx;
   height: 214rpx;
   margin-right: 23rpx;
 }
 .imageCol image:last-child{
   margin-right: 0;
 }
 .moreEventView,.replyPopup{
   position: fixed;
   left: 0;
   top: 0;
   bottom: 0;
   right: 0;
   z-index: 999;
   background: rgba(0,0,0,.2);
 }
 .popupCont{
   min-height: 300rpx;
   width: 100%;
   background: #fff;
   position: absolute;
   left: 0;
   bottom: 0;
  border-radius: 25rpx 25rpx 0px 0px;
  padding-bottom: 30rpx;
 }
 .reportPIcon{
  width: 85rpx;
  text-align: center;
  margin: 30rpx 0 40rpx 50rpx;
 }
 .reportPIcon image{
   width: 40rpx;
   height: 37rpx;
   padding: 23rpx;
   /* box-sizing: border-box; */
   background: #F7F7F7;
   border-radius: 50%;
 }
 .reportPIcon text{
   font-size: 28rpx;
   color: #444444;
 }
 .replyPBtn{
  width: 524rpx;
  height: 58rx;
  background: #F8F8F8;
  border-radius: 29rpx;
  margin:  0 auto;
  text-align: center;
  line-height: 58rpx;
  font-size: 28rpx;
  color: #50DABE;
 }
 .replyReason{
  border-top: 1px solid #F3F3F3;
  margin-bottom: 30rpx;
 }
 .replyRTitle{
   font-size: 25rpx;
   color: #5A5A5A;
   line-height: 26rpx;
   margin: 20rpx 0 30rpx 30rpx;
 }
 .replyRCol{
  width: 300rpx;
  height: 52rpx;
  border: 1px solid #EDEDED;
  border-radius: 26rpx;
  display: inline-block;
  text-align: center;
  line-height: 52rpx;
  font-size: 24rpx;
  color: #424242;
  margin: 0 0 20rpx 45rpx;
 }
 /* .green{

 } */
 .replyRCol.green{
  color:#50DABE;
  border: 1px solid #50DABE;
 }

 .replyPCont{
   position: absolute;
   left: 0;
   bottom: 0;
   z-index: 9;
   background: #fff;
   padding: 20rpx;
   box-sizing: border-box;
   width: 100%;
 }
 .textareaRe{
   width: 80%;
   height: 200rpx;
   background: #F3F3F3;
   border-radius: 15rpx;
   padding: 15rpx;
   box-sizing: border-box;
   font-size: 28rpx;
   color: #666;
 }
 .replyTextarea{
   display: flex;
   align-items: flex-end;
   justify-content: space-between;
 }
 .sendBtn{
  width: 122rpx;
  height: 58rpx;
  background: #F2FFFC;
  border-radius: 29rpx;
  text-align: center;
  line-height: 58rpx;
  color: #50DABE;
  font-size: 30rpx;
 }
 .cancelBtn{
  background: #F3F3F3;
  color: #B3B3B3;
  margin-bottom: 20rpx;
 }
 