/* components/pickerUp/pickerUp.wxss */
.citypicker{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  background: rgba(0,0,0,.5);
  z-index: 99;
}
.citybody {
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  z-index: 99;
  border-top: 1rpx #aaa solid; 
  box-shadow: 2px -2px 3px rgba(116,137,145,.13);
}
.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2FB42E
}